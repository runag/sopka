if [ -n "${VERBOSE:-}" ]; then
  set -o xtrace
fi

set -o nounset

fail() {
  echo "${BASH_SOURCE[1]}:${BASH_LINENO[0]}: in \`${FUNCNAME[1]}': Error: ${1:-"Abnormal termination"}" >&2
  exit "${2:-1}"
}

MY_COMPUTER_DEPLOY_DIR="$(dirname "${BASH_SOURCE[0]}")" || fail "Unable to determine MY_COMPUTER_DEPLOY_DIR ($?)"
MY_COMPUTER_DEPLOY_DIR="$(cd "${MY_COMPUTER_DEPLOY_DIR}"/.. >/dev/null 2>&1 && pwd)" || fail "Unable to determine full path for MY_COMPUTER_DEPLOY_DIR ($?)"

export MY_COMPUTER_DEPLOY_DIR

if [ -f "${MY_COMPUTER_DEPLOY_DIR}/stan-deploy-lib/index.sh" ]; then
  . "${MY_COMPUTER_DEPLOY_DIR}/stan-deploy-lib/index.sh" || fail
else
  if [ -f "${HOME}/.stan-deploy-lib/index.sh" ]; then
    . "${HOME}/.stan-deploy-lib/index.sh" || fail
  else
    fail "Unable to load stan-deploy-lib"
  fi
fi

. "${MY_COMPUTER_DEPLOY_DIR}/lib/config.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/macos.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/menu.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/misc.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/sublime.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/sway.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/ubuntu.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/vscode.sh" || fail
. "${MY_COMPUTER_DEPLOY_DIR}/lib/windows.sh" || fail

if [ -n "${1:-}" ]; then
  declare -f "$1" >/dev/null || fail "Argument must be a function name: $1"
fi

"${1:-menu::select}" "${@:2}" || fail
