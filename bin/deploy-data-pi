set -o xtrace
set -o nounset

# data-pi
. data-pi/lib.sh
data-pi::install-motd
data-pi::install-led-heartbeat

ubuntu::set-hostname "stan-data-pi"

data-pi::apt::add-ubuntu-raspi2-ppa

# ubuntu
. ubuntu/lib.sh

ubuntu::set-timezone UTC
ubuntu::set-locale en_US.UTF-8

ubuntu::install-my-computer-deploy-shell-alias
ubuntu::set-inotify-max-user-watches

ubuntu::apt::update
ubuntu::apt::dist-upgrade

ubuntu::apt::install-basic-tools
data-pi::apt::install-packages

ubuntu::apt::autoremove
