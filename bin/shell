set -o nounset

my-computer-deploy::shell() {
  local relativeDirPath
  local absoluteDirPath

  relativeDirPath="$(dirname "${BASH_SOURCE[0]}")" || { echo "Unable to determine relativeDirPath (${?})" >&2; exit 1; }
  absoluteDirPath="$(cd "${relativeDirPath}" >/dev/null 2>&1 && pwd)" || { echo "Unable to determine absoluteDirPath (${?})" >&2; exit 1; }

  export PATH="${absoluteDirPath}:${PATH}"

  cd "${absoluteDirPath}" || { echo "Unable to cd to ${absoluteDirPath} (${?})" >&2; exit 1; }
  cd .. || { echo "Unable to cd to parent dir from ${absoluteDirPath} (${?})" >&2; exit 1; }

  $SHELL
}

my-computer-deploy::shell || { echo "Call to my-computer-deploy::shell failed (${?})" >&2; exit 1; }
