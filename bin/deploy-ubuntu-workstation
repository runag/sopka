set -o xtrace
set -o nounset

. deploy-lib.sh || fail
. data-pi/data-pi-lib.sh || fail
. sublime/sublime-lib.sh || fail
. ubuntu/ubuntu-lib.sh || fail
. vscode/vscode-lib.sh || fail

ubuntu::ensure-this-is-ubuntu-workstation || fail

data-pi::install-shell-aliases || fail

ubuntu::install-my-computer-deploy-shell-alias || fail
ubuntu::set-inotify-max-user-watches || fail

ubuntu::apt::add-yarn-source || fail
ubuntu::apt::add-nodejs-source || fail

ubuntu::apt::update || fail
ubuntu::apt::dist-upgrade || fail

ubuntu::apt::install-basic-tools || fail
ubuntu::apt::install-ruby-and-devtools || fail
ubuntu::apt::install-nodejs || fail
ubuntu::apt::install-gsettings || fail
ubuntu::apt::install-tor || fail

ubuntu::apt::autoremove || fail

ubuntu::configure-desktop-apps || fail

sublime::install-sublime-merge || fail

vscode::install-config || fail
