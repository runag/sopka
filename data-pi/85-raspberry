#  limitations under the License.echo "\n  Raspberry Pi\n"


# You will not see stderr from motd scripts, I have no idea why. So no >&2; here for error messages.

# https://www.funtoo.org/Raspberry_Pi_Userland_(VCGENCMD)

echo -n "  "
vcgencmd get_throttled || { echo "Unable to execute vcgencmd get_throttled ($?)"; }

echo -n "  "
vcgencmd measure_temp || { echo "Unable to execute vcgencmd measure_temp ($?)"; }

for i in core sdram_c sdram_i sdram_p; do
  echo "  ${i}_$(vcgencmd measure_volts "${i}" || { echo "Unable to execute vcgencmd measure_volts ${i} ($?)"; })"
done

echo ""

sudo smartctl -H -A -l error /dev/sda || { echo "Unable to execute smartctl /dev/sda ($?)"; }
